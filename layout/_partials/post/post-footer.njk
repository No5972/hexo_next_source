{%- if theme.footer.ad.enable %}
  <div class="ad" style="text-align: center;">
    <a href="{{ theme.footer.ad.url }}" target="_blank"><img src="{{ theme.footer.ad.img }}"></img></a>
  </div>
{%- endif %}
