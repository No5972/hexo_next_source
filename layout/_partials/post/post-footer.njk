    <script src="//s7.addthis.com/js/300/addthis_widget.js#pubid={{ theme.add_this_id }}" async="async"></script>
  </div> -->
  <div class="social-share" data-sites="weibo,wechat,qq,qzone,facebook,twitter,linkedin" data-title='{{ page.title }}' data-description='{{ page.excerpt }}' style="text-align: center; margin: 1rem 0;"></div>
